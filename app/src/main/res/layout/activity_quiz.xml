<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"

    tools:context="com.example.android.quizapp.QuizActivity">


    <!-- Score bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp">

        <!-- Score "header" -->
        <TextView
            android:id="@+id/score_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_text"
            android:textSize="18sp" />

        <!-- TextView for the scoreCounter -->
        <TextView
            android:id="@+id/score_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/score_header"
            android:layout_toRightOf="@+id/score_header"
            android:text="0"
            android:textSize="18sp" />

    </RelativeLayout>

    <!-- Question panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:id="@+id/question_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/question_header"
            android:textSize="@dimen/headline" />

        <!-- Question container -->
        <TextView
            android:id="@+id/question_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="8dp"
            android:text="Question goes here"
            android:textAlignment="center"
            android:textSize="@dimen/display_text" />
    </LinearLayout>


    <!-- Answer panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!-- Answer Container -->
        <LinearLayout
            android:id="@+id/answer_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:orientation="vertical">

        </LinearLayout>

        <!-- Answer Button -->
        <Button
            android:id="@+id/answer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/answer" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/time_left_ProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/progress" />

        <!-- Time left TextView -->
        <TextView
            android:id="@+id/time_left_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/default_time_text"
            android:textAlignment="center"
            android:textSize="@dimen/time_left_text" />

    </RelativeLayout>


</LinearLayout>
